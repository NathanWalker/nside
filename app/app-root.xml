<!--
The TabView component provides a simple way to navigate between different views by
tapping on some of the tabs or by swiping between the views.
Learn more about the TabView component in this documentation article:
http://docs.nativescript.org/cookbook/ui/tab-view
-->

<Frame defaultPage="browse/browse-page"></Frame>

<TabView androidTabsPosition="bottom">
    <!-- Icons from: https://icons8.com/ios -->
    <TabViewItem title="Console" ios:iconSource="res://tabIcons/create_new" android:iconSource="res://create_new">
        <Frame defaultPage="browse/browse-page"></Frame>
    </TabViewItem>

    <TabViewItem title="Canvas" ios:iconSource="res://tabIcons/health_data" android:iconSource="res://health_data">
        <Frame defaultPage="canvas/canvas-page"></Frame>
    </TabViewItem>
    
    <TabViewItem title="Examples" ios:iconSource="res://tabIcons/list" android:iconSource="res://list">
        <Frame defaultPage="examples/examples-items-page"></Frame>
    </TabViewItem>

    <TabViewItem title="About" ios:iconSource="res://tabIcons/help" android:iconSource="res://help">
        <Frame defaultPage="about/about-page"></Frame>
    </TabViewItem>
</TabView>
