<!--
This is the page that is presented in the 'Search' tab.
Feel free to customize layouts and components to change how the tab view looks.
-->
<Page
    class="page"
    navigatingTo="onNavigatingTo"  
    xmlns="http://schemas.nativescript.org/tns.xsd">

    <ActionBar class="action-bar" backgroundColor="gray">
        <Label class="action-bar-title" text="About" color="white"></Label>
    </ActionBar>
    <GridLayout class="page-content">
        <ScrollView height="100%" width="100%">
            <TextView id="tv" height="100%" width="100%" loaded="{{ onComponentLoaded }}" editable="false"></TextView>
        </ScrollView>
    </GridLayout>
</Page>
