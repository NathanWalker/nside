<Page
    class="page"
    navigatingTo="onNavigatingTo"  
    xmlns="http://schemas.nativescript.org/tns.xsd">

    <!-- <ActionBar class="action-bar">
        <Label class="action-bar-title" text="Browse"></Label>
    </ActionBar> -->

    <FlexboxLayout flexDirection="column" alignItems="center">
        <!-- <Label class="page-icon fa" text="&#xf1ea;"></Label> -->
        <!-- <Label class="page-placeholder" text="Browse page content goes here"></Label> -->
        <!-- https://docs.nativescript.org/ui/styling#application-wide-css these can't flex for some reason -->
        <TextView
            id="input"
            height="90%"
            width="100%"
            editable="true"
            loaded="{{ onTextViewLoaded }}"
            hint="Enter Javascript code"
            text='{{ textViewValue }}'
            secure="false"
            keyboardType="datetime"
            returnKeyType="send" 
            returnPress="{{ onReturnPress }}"
            autocorrect="false"
            focus="{{ onFocus }}" 
            blur="{{ onBlur }}" 
            class="input input-border"
        />
        <FlexboxLayout height="10%" flexDirection="row" alignItems="center" justifyContent="space-around">
            <!-- <Button text="View output" tap="{{ output }}" class="btn btn-primary btn-active"/> -->
            <Button text="Run code" tap="{{ run }}" class="btn btn-primary btn-active"/>
            <Button text="Clear" tap="{{ clear }}" class="btn btn-primary btn-active"/>
        </FlexboxLayout>
    </FlexboxLayout>
</Page>