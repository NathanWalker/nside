        <!-- <ui:SyntaxView/> -->
        <ContentView id="SyntaxView" height="45%" width="100%" loaded="{{ onComponentLoaded }}"></ContentView>
        <ScrollView height="5%" width="100%">
            <TextView
                id="ownProps"
                height="100%"
                width="100%"
                editable="false"
                loaded="{{ onComponentLoaded }}"
                hint="(Own properties)"
                text='{{ ownPropsValue }}'
                class="input input-border"
                backgroundColor="rgb(220,240,240)"
                
            />
        </ScrollView>
        <ScrollView height="5%" width="100%">
            <TextView
                id="inheritedProps"
                height="100%"
                width="100%"
                editable="false"
                loaded="{{ onComponentLoaded }}"
                hint="(Inherited properties)"
                text='{{ inheritedPropsValue }}'
                class="input input-border"
                backgroundColor="rgb(220,220,240)"
                
            />
        </ScrollView>
        <ScrollView height="35%">
            <TextView
                id="output"
                height="100%"
                width="100%"
                editable="false"
                loaded="{{ onComponentLoaded }}"
                hint="(Console output)"
                text='{{ outputValue }}'
                class="input input-border"
                backgroundColor="rgb(240,240,240)"
            />
        </ScrollView>
        <ContentView
            id="design"
            height="35%"
            width="100%"
            loaded="{{ onComponentLoaded }}"
            backgroundColor="rgb(240,240,200)"
        >
        </ContentView>
        <FlexboxLayout height="10%" flexDirection="row" alignItems="center" justifyContent="space-around">
            <!-- <Button text="View output" tap="{{ output }}" class="btn btn-primary btn-active"/> -->
            <Button text="Run code" tap="{{ run }}" class="btn btn-primary btn-active"/>
            <Button text="Clear" tap="{{ clear }}" class="btn btn-primary btn-active"/>
            <Button id="designButton" loaded="{{ onComponentLoaded }}" text="Design" tap="{{ toggleDesign }}" class="btn btn-primary btn-active"/>
        </FlexboxLayout>
    </FlexboxLayout>
</Page>